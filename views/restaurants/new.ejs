<%- include('../partials/header') %>

<H2>NEW RESTAURANT</H2>

<form action="/restaurants" method="POST">

    <label for="name">Restaurant Name</label>
    <input type="text" id="name" name="name" value="<%= restaurant.name%>">
    <br><br>
    <label for="address">Address</label>
    <input type="text" id="address" name="address" value="<%= restaurant.address%>"">
    <br><br>

    <h3>Menu</h3>
    <label for="starters">Starters (comma-separated)</label>
    <input type="text" id="starters" name="menu.starters">
    <br>
    <label for="maincourse">Main Course (comma-separated, required)</label>
    <input type="text" id="maincourse" name="menu.maincourse" required>
    <br>
    <label for="dessert">Dessert (comma-separated)</label>
    <input type="text" id="dessert" name="menu.dessert">
    <br>
    
    <button type="submit">Create Restaurant</button>

</form>

<%- include('../partials/footer') %>